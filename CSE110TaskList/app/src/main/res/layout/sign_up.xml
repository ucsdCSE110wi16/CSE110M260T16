<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/TextField_firstName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:id="@+id/TextField_lastName"
        android:layout_below="@+id/TextField_firstName"
        android:layout_alignLeft="@+id/TextField_firstName"
        android:layout_alignStart="@+id/TextField_firstName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TextField_password"
        android:hint="Password"
        android:layout_below="@+id/TextField_lastName"
        android:layout_alignLeft="@+id/TextField_lastName"
        android:layout_alignStart="@+id/TextField_lastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TextField_email"
        android:layout_below="@+id/TextField_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Email Address" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Done"
        android:id="@+id/B_done"
        android:onClick="onButtonClick"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/TextField_email"
        android:layout_alignEnd="@+id/TextField_email" />

</RelativeLayout>
