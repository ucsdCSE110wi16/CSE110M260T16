<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="@dimen/design_tab_max_width"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/TextField_firstName"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/TextField_lastName"
        android:layout_alignStart="@+id/TextField_lastName"
        android:textColor="#007EE5" />

    <EditText
        android:layout_width="@dimen/design_tab_max_width"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:id="@+id/TextField_lastName"
        android:layout_below="@+id/TextField_firstName"
        android:layout_alignLeft="@+id/TextField_password"
        android:layout_alignStart="@+id/TextField_password"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="@dimen/design_tab_max_width"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/TextField_password"
        android:hint="Password"
        android:layout_below="@+id/TextField_lastName"
        android:layout_alignLeft="@+id/TextField_email"
        android:layout_alignStart="@+id/TextField_email"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="@dimen/design_tab_max_width"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TextField_email"
        android:hint="Email Address"
        android:layout_below="@+id/TextField_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="@dimen/design_tab_max_width"
        android:layout_height="wrap_content"
        android:hint="Done"
        android:id="@+id/B_done"
        android:onClick="onButtonClick"
        android:layout_below="@+id/TextField_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#007EE5"
        android:textColor="#ffffff"
        android:text="DONE"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Create an account to start organizing!"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#007EE5" />

</RelativeLayout>
